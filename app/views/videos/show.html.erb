<div class="container p-t-md">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <div class="panel panel-default">
        <div class="panel-body">
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="https://player.vimeo.com/video/<%= @video.vimeo_id %>" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe> <p><a href="https://vimeo.com/<%= @video.vimeo_id %>">1_BalanceStances</a> from <a href="https://vimeo.com/afotw">A Fly On The Wall</a> on <a href="https://vimeo.com">Vimeo</a>.</p>
          </div>        
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
          <h5 class="m-t-0">
            <%= @video.title %>
          </h5>

          <%= @video.description %>

          <%= link_to 'Edit', edit_video_path(@video) %> |
          <%= link_to 'Back', videos_path %>

        </div>
      </div>

    </div>
  </div>
</div>